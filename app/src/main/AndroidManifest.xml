<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sebastianbabb.examples.yelp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- ADD GOOGLE MAPS API KEY HERE -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="API_KEY_GOES_HERE" />

        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:screenOrientation="locked"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".splashscreen.SplashScreenService"
            android:exported="false" >
        </service>

        <activity
            android:name=".yelp.YelpRequestActivity"
            android:screenOrientation="locked"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name=".yelp.YelpRequestService"
            android:exported="false" />

        <activity
            android:name=".maps.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>

        <service
            android:name=".maps.GeocodeService"
            android:exported="false" >
        </service>

    </application>

</manifest>
